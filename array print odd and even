#include <stdio.h>

int main() {
    int arr[] = {2, 4, 7, 10, 15, 8, 11, 6};
    int size = sizeof(arr) / sizeof(arr[0]);

    printf("Odd values in the array: ");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 != 0) {
            printf("%d ", arr[i]);
        }
    }

    printf("\nEven values in the array: ");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 == 0) {
            printf("%d ", arr[i]);
        }
    }
    
    return 0;
}
